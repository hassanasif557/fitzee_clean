rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles collection - users can only read/write their own profile
    match /user_profiles/{userId} {
      // Allow read and write if the user is authenticated and the document belongs to them
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Daily data collection - users can read/write their own data, read all for leaderboard
    match /daily_data/{documentId} {
      // Users can read/write their own daily data
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      // Users can read all daily data for leaderboard (but not write others' data)
      allow read: if request.auth != null;
    }
    
    // Daily nutrition collection - users can read/write their own data, read all for leaderboard
    match /daily_nutrition/{documentId} {
      // Users can read/write their own nutrition data
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      // Users can read all nutrition data for leaderboard (but not write others' data)
      allow read: if request.auth != null;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
