rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles collection - users can only read/write their own profile
    match /user_profiles/{userId} {
      // Allow read and write if the user is authenticated and the document belongs to them
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Daily data collection - users can read/write their own data, read all for leaderboard
    match /daily_data/{documentId} {
      // Write: use request.resource so CREATE works (no resource on new doc)
      allow write: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null;
    }

    // Daily nutrition collection - users can read/write their own data
    match /daily_nutrition/{documentId} {
      allow write: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null;
    }
    
    // Medical info collection - users can read/write their own medical entries
    match /medical_info/{documentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Workout collection - users can read/write their own workout data (steps, calories burned, exercise minutes)
    match /workout/{documentId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
